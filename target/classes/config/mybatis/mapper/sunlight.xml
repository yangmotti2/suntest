<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sun">

	<select id="sun_list" resultType="vo.SunVO">
		select * from SUN
	</select>

	<!-- direct_radiation 전체 조회 -->
	<select id="radi_list" resultType="vo.RadiVO" parameterType="String">
		select * from direct_radiation order by time
	</select>

	<!-- direct_radiation 해당 날짜 존재 여부 조회 -->
	<select id="radi_list_date" resultType="vo.RadiVO" parameterType="String">
		select * from direct_radiation where time Like #{date}||'%' order by time
	</select>
	
	<!-- direct_radiation 추가 -->
	<insert id="insert" parameterType="java.util.Map">
		insert into direct_radiation values(
			seq_radiation_idx.nextVal,
			#{radi},
			#{time}
		)
	</insert>
 	
</mapper>












